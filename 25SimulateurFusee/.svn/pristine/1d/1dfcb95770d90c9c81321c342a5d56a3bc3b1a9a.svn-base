package interfaces;

import java.awt.Graphics2D;
import java.awt.geom.AffineTransform;
/**
 * Cette interface rend un objet dessinnable avec un grandissement
 * @author Thomas Corbeil
 *
 */
public interface DessinableGrandissement {
	/**
	 * Méthode qui dessinne l'objet dans un monde défini avec des unitées réelles et avec un rapport d'homotétie
	 * 
	 * @param g2d le contexte graphique dans lequel on veut dessiner l'objet
	 * @param mat la matrice de transformation passant du mode réel au monde des pixels
	 * @param rotation la rotation en degrés par rapport au centre de l'objet à dessiner
	 * @param x la postion x de la pièce en m
	 * @param y la postion y de la pièce en m
	 * @param centreRotX la postion du centre de la rotation x de la pièce en m
	 * @param centreRotY la postion du centre de la rotation y de la pièce en m@param g2d
	 * @param grandissement le rapport d'homotétie avec lequel on veut dessiner la pièce
	 */
	public void dessinerAvecGrandissement(Graphics2D g2d, AffineTransform mat, double rotation, double x, double y, double centreRotX, double centreRotY, double grandissement);

}
